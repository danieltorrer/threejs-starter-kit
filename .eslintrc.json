{
	"env": {
		"commonjs": false,
		"es6": true,
		"node": false
	},
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"plugins": [
		"prettier"
	],
	"rules": {
		"arrow-parens": 0,
		"linebreak-style": [
			2,
			"unix"
		],
		"indent": [
			"error",
			2
		],
		"quotes": [
			2,
			"single"
		],
		"no-undef": [
			2,
			"error"
		],
		"prettier/prettier": [
			"error"
		],
		"semi": [
			"error",
			"always"
		]
	},
	"extends": [
		"plugin:prettier/recommended"
	]
}